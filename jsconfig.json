{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "checkJs": true,
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "strict": true,

        "lib": [ "dom", "es6" ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js"
    ],
    "exclude": [
        "./node_modules/",
        "./dist/"
    ]
}
