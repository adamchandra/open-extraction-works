{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "lib": [ "dom", "es2017" ]
        "module": "system",
        "noEmit": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true
        "target": "es2017",
        "types" : ["node", "koa", "underscore", "d3", "requirejs"]
    },
    "include": [
        "main.js",
        "server.js",
        "www/**/*"
    ],
    "exclude": [
        "node_modules"
    ]

}

