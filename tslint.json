{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts",
            "src/@types/lunr/*.d.ts"
        ]
    },
    "jsRules": {},
    "rules": {
        "object-literal-sort-keys": false,
        "trailing-comma": [true, {"multiline": "ignore", "singleline": "never"}],
        "no-consecutive-blank-lines": false,
        "max-classes-per-file": false,
        "ordered-imports": false,
        "arrow-parens": false,
        "whitespace": [true,
                       "check-branch",
                       "check-decl",
                       "check-separator",
                       "check-rest-spread",
                       "check-type",
                       "check-typecast",
                       "check-type-operator",
                       "check-preblock"
                      ]
    },
    "rulesDirectory": []
}
