{
  "compilerOptions": {

    "target": "es6",
    "module": "es6",

    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFilenames": true,

    "inlineSourceMap": true,
    "baseUrl": ".",

    "noEmit": true,
    "diagnostics": true,

    "types": [],

    "paths": {
      "@/*": [
        "src/*"
      ]
    },

    "declaration": true,
    "outDir": "./dist"

  },

  "include": [
    "src/**/*",
  ]

}
