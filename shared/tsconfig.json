{
  "compilerOptions": {

    "target": "es6",
    "module": "es6",

    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,

    "inlineSourceMap": true,
    "baseUrl": ".",

    "noEmit": false,
    "diagnostics": true,

    "types": [],

    "paths": {
      "@/*": [
        "src/*"
      ]
    },

    "declaration": true,
    "outDir": "./dist"

  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules/**/*"
  ]

}
