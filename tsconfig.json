
{
    "compilerOptions": {
        "baseUrl": ".",
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "./jsout/",

        "allowSyntheticDefaultImports": true,
        "preserveConstEnums": true,

        "noEmit": true,
        "checkJs": false,
        "allowJs": true,

        "module": "commonjs",

        "lib": [
            "es2016",
            "dom"
        ]
    },
    "include": [
        "./src/client/**/*.ts"
    ],
    "exclude": [
        "./node_modules/",
        "./dist/"
    ]
}
