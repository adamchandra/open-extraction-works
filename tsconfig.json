
{
    "compilerOptions": {
        "baseUrl": ".",
        "removeComments": true,
        "sourceMap": true,
        "moduleResolution": "node",

        "allowSyntheticDefaultImports": false,
        "preserveConstEnums": true,

        "noEmit": true,
        "checkJs": false,
        "allowJs": true,
        "strict": true,
        "target": "es6",
        "diagnostics": true,

        "module": "commonjs",
        "typeRoots" : ["typings", "node_modules/@types" ]
    },
    "files" : [
        "typings/lunr/index.d.ts"
    ],

    "include": [
        "src/**/*"
    ],
    "exclude": [
        "webpack.config.js",
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}
