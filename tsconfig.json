{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "checkJs": true,
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "strict": true,

        "lib": [ "dom", "es6" ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/",
        "./dist/",
        "./src/dev/**"
    ]
}
