{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "description": "Backend server for WatrColors",
  "keywords": [
  ],
  "dependencies": {
    "commander": "^5.1.0",
    "commons": "0.1.0",
    "fs-extra": "^9.0.0",
    "klaw": "^3.0.0",
    "klaw-sync": "^6.0.0",
    "koa": "^2.12.0",
    "koa-body": "^4.1.2",
    "koa-bodyparser": "^4.3.0",
    "koa-ejs": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^8.0.8",
    "koa-send": "^5.0.0",
    "nodemon": "^2.0.4",
    "pumpify": "^2.0.1",
    "through2": "^3.0.1",
    "winston": "^3.2.1",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^9.0.0",
    "@types/jest": "^25.2.2",
    "@types/koa": "^2.11.3",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.4.1",
    "@types/koa-send": "^4.1.2",
    "@types/lodash": "^4.14.151",
    "@types/through2": "^2.0.36",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^26.0.1",
    "ts-jest": "^26.0.0",
    "tslib": "^2.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  },
  "license": "ISC",
  "main": "./src/server.ts",
  "directories": {
    "src": "src"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "serve": "./bin/ts-node ./src/server.ts",
    "start": "nodemon",
    "ui:dev": "./bin/ts-node ./src/server.ts --corpus ../../corpus-test.d",
    "lint": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src",
    "test": "jest"
  },
  "nodemonConfig": {
    "ignore": ["**/*.test.ts","**/*.spec.ts",".git","node_modules"],
    "watch": ["src"],
    "exec": "npm run serve",
    "ext": "ts"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
