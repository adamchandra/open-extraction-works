{
  "name": "sharedLib",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/d3": "^5.7.2",
    "@types/rbush": "^3.0.0",
    "d3": "^5.14.2",
    "jquery": "^3.4.1",
    "rbush": "^3.0.1",
    "split.js": "^1.5.11"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",


    "babel:type-check": "tsc --noEmit",
    "babel:type-check:watch": "npm run type-check -- --watch",
    "babel:build:types": "tsc --emitDeclarationOnly --declaration",
    "babel:build:types:watch": "npm run build:types -- --watch",
    "babel:build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "babel:build:js:watch": "npm run build:js -- --watch",
    "babel:build": "npm-run-all clean build:types build:js",
    "babel:build:watch": "npm-run-all build:types:watch build:js:watch",

    "tsc:build": "tsc --declaration",
    "tsc:rebuild": "npm-run-all clean tsc:build",

    "build": "npm-run-all tsc:rebuild"

  },
  "main": "src/index.ts",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": {
          "ignoreCodes": [
            151001,
            7016
          ]
        }
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "peerDependencies": {
  }
}
