{
  "name": "codemorphs",
  "version": "0.1.0",
  "private": true,
  "description": "Utilities to generate and manipulate typescript code",
  "keywords": [],
  "author": "Adam Saunders <saunders@cs.umass.edu>",
  "license": "ISC",
  "main": "./dist/main.js",
  "directories": {
    "src": "src"
  },
  "dependencies": {
    "commander": "^5.0.0",
    "fs-extra": "^9.0.0",
    "ts-morph": "^7.0.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-import": "^2.20.2",
    "jest": "^25.3.0",
    "lodash": "^4.17.15",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "tsc",
    "dist": "tsc",
    "watch": "tsc --watch",
    "morph": "node dist/main.js",
    "mainxx": "npm-run-all --serial build \"morph -- {@}\" --",
    "main": "yarn build && yarn morph",
    "lint": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src --",
    "lint:fix": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src --fix",
    "disabled-test": "jest"
  },
  "bugs": {
    "url": "https://github.com/iesl/watr-jslibs/issues"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
