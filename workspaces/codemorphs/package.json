{
  "name": "codemorphs",
  "version": "0.1.0",
  "private": true,
  "description": "Utilities to generate and manipulate typescript code",
  "keywords": [],
  "author": "Adam Saunders <saunders@cs.umass.edu>",
  "dependencies": {
    "commander": "^4.0.1",
    "ts-morph": "^5.0.0",
    "typescript": "^3.7.3",
    "fs-extra": "^8.1.0"
  },
  "license": "ISC",
  "main": "./dist/main.js",
  "directories": {
    "src": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iesl/watr-jslibs.git"
  },
  "scripts": {
    "build": "tsc",
    "ver": "tsc --version && which tsc",
    "watch": "tsc --watch",
    "morph": "node dist/main.js",
    "main": "npm-run-all --serial build \"morph -- {@}\" --",
    "test": "jest"
  },
  "bugs": {
    "url": "https://github.com/iesl/watr-jslibs/issues"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": {
          "ignoreCodes": [
            151001,
            7016
          ]
        }
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
