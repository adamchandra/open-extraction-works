{
  "name": "codemorphs",
  "version": "0.1.0",
  "private": true,
  "description": "Utilities to generate and manipulate typescript code",
  "keywords": [],
  "author": "Adam Saunders <saunders@cs.umass.edu>",
  "license": "ISC",
  "main": "./dist/main.js",
  "directories": {
    "src": "src"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "fs-extra": "^9.0.1",
    "ts-morph": "^7.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.157",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "eslint": "^7.4.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-chai-expect": "^2.1.0",
    "eslint-plugin-import": "^2.22.0",
    "jest": "^26.1.0",
    "lodash": "^4.17.15",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "build": "tsc",
    "dist": "tsc",
    "watch": "tsc --watch",
    "morph": "node dist/main.js",
    "mainxx": "npm-run-all --serial build \"morph -- {@}\" --",
    "main": "yarn build && yarn morph",
    "lint": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src --",
    "lint:fix": "eslint --config .eslintrc.js --ext .ts --ignore-path ../../.gitignore ./src --fix",
    "disabled-test": "jest"
  },
  "bugs": {
    "url": "https://github.com/iesl/watr-jslibs/issues"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
