{
  "name": "sharedLib",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "d3": "^5.14.2",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "rbush": "^3.0.1",
    "rbush-knn": "^2.1.0",
    "split.js": "^1.5.11"
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:types:watch": "npm run build:types -- --watch",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build:js:watch": "npm run build:js -- --watch",
    "build": "npm-run-all clean build:types build:js",
    "build:watch": "npm-run-all build:types:watch build:js:watch"
  },
  "main": "src/index.ts",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": {
          "ignoreCodes": [
            151001,
            7016
          ]
        }
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
