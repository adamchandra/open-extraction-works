{
  "compilerOptions": {
    "baseUrl": ".",

    "strict": true,
    "removeComments": false,

    "moduleResolution": "node",
    "inlineSourceMap": true,
    "resolveJsonModule": true,

    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "target": "es6",
    "module": "es6",

    "types": [
      "webpack-env",
      "jest",
      "chai"
    ],

    "paths": {
      "@/*": [
        "src/*"
      ]
    }

  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
