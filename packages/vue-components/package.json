{
  "name": "vueComponentLib",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "lint": "vue-cli-service lint",
    "build:lib:dev": "vue-cli-service build --mode development --target lib --name vueComponentLib ./src/index.ts",
    "build:lib:prod": "vue-cli-service build --target lib --name vueComponentLib ./src/index.ts",
    "develop": "npm-run-all -p -r storybook serve:json",
    "dist:dev": "npm-run-all build:lib:dev && npm pack",
    "dist:prod": "npm-run-all build:lib:prod && npm pack",
    "serve:json": "json-server --port 3100 src/components/filter-engine/__dev-data/db.json --static ./src/components/filter-engine/__dev-data/tracelogs",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test:unit": "vue-cli-service test:unit 'src/**/**/*.spec.ts'"
  },
  "dependencies": {
    "jquery": "^3.3.1",
    "lodash": "^4.17.11",
    "lunr": "^2.3.5",
    "register-service-worker": "^1.0.0",
    "sharedLib": "^0.1.0",
    "vue": "^2.5.17",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.2",
    "vuex": "^3.0.1",
    "vuex-class": "^0.3.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "4.0.0-alpha.20",
    "@storybook/addon-links": "4.0.0-alpha.20",
    "@storybook/vue": "^4.0.9",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-links": "^3.3.3",
    "@types/storybook__vue": "^3.3.1",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-plugin-pwa": "^3.1.2",
    "@vue/cli-plugin-typescript": "^3.1.1",
    "@vue/cli-plugin-unit-mocha": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "@vue/eslint-config-airbnb": "^4.0.0",
    "@vue/eslint-config-typescript": "^3.1.1",
    "@vue/test-utils": "^1.0.0-beta.26",
    "babel-preset-vue": "^2.0.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "json-server": "^0.14.0",
    "vue-cli-plugin-storybook": "^0.4.8",
    "vue-template-compiler": "^2.5.17",
    "webpack-merge": "^4.1.4",
    "npm-run-all": "^4.1.5",
    "@types/lunr": "^0.1.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "main": "./dist/vueComponentLib.umd.js"
}
