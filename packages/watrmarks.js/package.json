{
  "name": "watrmarksJs",
  "version": "0.1.0",
  "private": true,
  "bundleDependencies": false,
  "deprecated": false,
  "description": "NPM package for WatrMarks",
  "main": "./dist/watrmarks-fastopt.js",
  "types": "./dist/watrmarks.d.ts",
  "scripts": {
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "clean": "rimraf dist && mkdir dist && rimraf lib.d && mkdir lib.d",
    "fetchlib": "xx cp ../../../watr-marks/js/target/scala-2.12/watrmarks-fastopt.js* lib.d/",
    "cplib": "xx cp lib.d/watrmarks-fastopt.js.map dist/ && cp src/watrmarks.d.ts dist/",

    "dist": "xx npm-run-all clean fetchlib build cplib",
    "build": "npm-run-all clean build:types build:js",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "build:js": "babel src --out-dir dist"
  },
  "include": [
    "src/**/*"
  ],
  "keywords": [
    "scala",
    "WatrWorks",
    "WatrMarks"
  ],
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@types/jest": "^24.0.21",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js)$"
  }
}
