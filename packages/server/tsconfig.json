{
  "extends": "../shared/tsconfig-base.json",

  "compilerOptions": {
    "baseUrl": ".",

    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noEmit": false,

    "types": [
      "jest",
      "chai",
      "node"
    ],

    "allowSyntheticDefaultImports": true,
    "importHelpers": true,

    "outDir": "./dist"
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]

}
