{
  "extends": "../shared/tsconfig-base.json",

  "compilerOptions": {
    "baseUrl": ".",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "allowJs": true,

    "types": [
      "webpack-env",
      "jest",
      "chai",
      "vuetify",
      "@types/node",
      "@nuxt/types"
    ]

  },

  "paths": {
    "@/*": ["./src/*"],
    "~/*": ["./src/*"]
  },

  "include": [
    "src/**/*"
  ],

  "exclude": ["node_modules", ".nuxt", "dist"]
}
